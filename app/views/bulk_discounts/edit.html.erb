<h1>Edit Discount</h1>

<%= form_with model: @bulk_discount, url: merchant_bulk_discount_path(@merchant, @bulk_discount), method: :patch, local: true do |f| %>
  <%= f.label :percentage %>
  <%= f.number_field :percentage %><br>

  <%= f.label :threshold %>
  <%= f.number_field :threshold %><br>

  <%= f.submit 'Submit' %>
<% end %>